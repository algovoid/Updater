<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Updater.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="700"
        x:Class="Updater.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Software Updater"
        Width="650"
        Height="700"
        MinWidth="600"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        >

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Segoe UI, Tahoma, Geneva, Verdana, sans-serif"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
       
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Opacity" Value="0.8"/>
            
        </Style>
        
        
        
        <Style Selector="Button:disabled /template/ ContentPresenter">
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Foreground" Value="Wheat"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
        </Style>
        
        
    </Window.Styles>
    
    
   <Border Margin="0" CornerRadius="16" Background="#F0F4F8" BoxShadow="0 20 60 #00000030">
        <Grid Background="White"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#667eea" CornerRadius="16,16,0,0" Padding="20,25">
                <StackPanel>
                    <TextBlock Text="Software Updater" FontSize="24" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Keep your application up to date" FontSize="14" Foreground="#E2E8F0" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30" Spacing="25">
                <!-- Status Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding StatusText}" FontSize="14" Foreground="#4A5568" FontWeight="SemiBold"/>
                    <Border Background="#E2E8F0" CornerRadius="10" Height="30">
                            <!--
                        <Border Background="#667eea" CornerRadius="10" >
                            <TextBlock Text="{Binding Progress, StringFormat='{}{0}%'}" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                                     Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                                     -->
                            <ProgressBar Height="30" 
                                         CornerRadius="5"
                                         
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Background="Transparent"
                                         Value="{Binding Progress}"
                                         ShowProgressText="True"
                                         >
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                        <GradientStop Color="#FF6B6B" Offset="0.0"/>
                                        <GradientStop Color="#4ECDC4" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        
                    </Border>
                </StackPanel>

                <!-- Log Section -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Update Log:" FontSize="14" Foreground="#4A5568" FontWeight="SemiBold"/>
                    <Border Background="#1A202C" CornerRadius="8" Height="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogEntries}" Background="Transparent">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Formatted}" 
                                                   Foreground="#00FF00" 
                                                   FontFamily="Courier New, monospace"
                                                   FontSize="12"
                                                   Margin="15,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Button Section -->
                <Grid ColumnDefinitions="*,*" HorizontalAlignment="Center" ColumnSpacing="15">
                    <Button Grid.Column="0" 
                            Width="280"
                            Command="{Binding UpdateCommand}"
                            Background="#667eea">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                
                                <Setter Property="FontWeight" Value="Bold"></Setter>
                                <Setter Property="Background" Value="#677eea"></Setter>
                            </Style>
                            
                        </Button.Styles>
                        <Label Content="{Binding UpdateButtonText}" 
                               HorizontalAlignment="Center"></Label>
                    </Button>
                    
                    <Button Grid.Column="1" 
                            Width="280"
                            Command="{Binding CancelCommand}"
                            >
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#f093fb" Offset="0"/>
                                <GradientStop Color="#f5576c" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <!--background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);-->
                                <Setter Property="FontWeight" Value="Bold"></Setter>
                                <Setter Property="Background" Value="#F093FB"></Setter>
                            </Style>
                            
                        </Button.Styles>
                        
                        
                        <Label Content="Cancel"
                               HorizontalAlignment="Center"></Label>
                    </Button>
                    
                    <!--<Button Grid.Column="2" 
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Background="#F093FB"/>-->
                </Grid>

                <!-- Version Info -->
                <!--<TextBlock Text="{Binding VersionInfo}" 
                          HorizontalAlignment="Center"
                          FontSize="12" 
                          
                          VerticalAlignment="Bottom"
                          Foreground="#718096"
                          Margin="0,20,0,0"/>-->
            </StackPanel>
            <TextBlock Grid.Row="1" Text="{Binding VersionInfo}" 
                       HorizontalAlignment="Center"
                       FontSize="12" 
                       
                       Padding="10"
                       VerticalAlignment="Bottom"
                       Foreground="#718096"
                       Margin="0,20,0,0"/>
        </Grid>
       
    </Border>
</Window>
